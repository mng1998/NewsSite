
@model IEnumerable<News.BusinessLayer.Models.Article>
<div class="col-lg-8">
    @foreach (var item in Model)
    {
        <div class="single-recent-blog-post">
            <div class="thumb">
                <img class="img-fluid" src="@item.Picture" width="750" height="400" alt="">
                <ul class="thumb-info">
                    <li><a href="#"><i class="ti-user"></i>@item.UserId</a></li>
                    <li><a href="#"><i class="ti-notepad"></i>@item.CreatedDate</a></li>
                    <li><a href="#"><i class="ti-themify-favicon"></i>2 Comments</a></li>
                </ul>
            </div>
            <div class="details mt-20">
                <a href="blog-single.html">
                    <h3>
                        @item.Title
                    </h3>
                </a>
                <p class="tag-list-inline">Tag: <a href="#">travel</a>, <a href="#">life style</a>, <a href="#">technology</a>, <a href="#">fashion</a></p>
                <p>@item.Summary</p>
                <a class="button" href="#">Read More <i class="ti-arrow-right"></i></a>
            </div>
        </div>
    }



    <hr />

    <!--Pagination-->
    <div class="row">
        <div class="col-lg-12">
            <nav class="blog-pagination justify-content-center d-flex">
                <ul class="pagination">
                    <li class="page-item">
                        <a href="#" class="page-link" aria-label="Previous">
                            <span aria-hidden="true">
                                <i class="ti-angle-left"></i>
                            </span>
                        </a>
                    </li>
                    <li class="page-item active"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item">
                        <a href="#" class="page-link" aria-label="Next">
                            <span aria-hidden="true">
                                <i class="ti-angle-right"></i>
                            </span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<hr />
