@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit";
}

<body>

    <div class="">

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">

                </div><!-- /.panel-->


                <div class="panel panel-default">
                    <div class="panel-heading">Post News</div>
                    <div class="panel-body">
                        <div class="col-md-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>News Categories</label>
                                    <select class="form-control">
                                        <option>Option 1</option>
                                        <option>Option 2</option>
                                        <option>Option 3</option>
                                        <option>Option 4</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Title</label>
                                    <input class="form-control" placeholder="Placeholder">
                                </div>
                                <div class="form-group">
                                    <label>Images</label>
                                    <input type="file">
                                    <p class="help-block">Example block-level help text here.</p>
                                </div>
                                <div class="form-group">
                                    <label>Summary</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div>

                                <div class="form-group">
                                    <label>Content</label>
                                    <textarea class="form-control" rows="6"></textarea>
                                </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value=""><b>Highlight News</b>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Status</label>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>Active
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">Expired
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Author</label>
                                <input class="form-control">
                            </div>

                            <button type="submit" class="btn btn-primary">Submit Button</button>
                            <button type="reset" class="btn btn-default">Reset Button</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div><!-- /.panel-->
        </div>

        <div class="col-sm-12">
            <p class="back-link"><p class="back-link">Today Magazine 2019</a></p></a></p>
        </div>

    <script src="~/js/jquery-1.11.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/chart.min.js"></script>
    <script src="~/js/chart-data.js"></script>
    <script src="~/js/easypiechart.js"></script>
    <script src="~/js/easypiechart-data.js"></script>
    <script src="~/js/bootstrap-datepicker.js"></script>
    <script src="~/js/custom.js"></script>
    </div>


</body>
